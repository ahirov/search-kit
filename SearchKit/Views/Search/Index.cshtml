@{
    ViewBag.Title = "Search";
}

<div id="sk-search" class="sk-content">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <div class="sk-search-panel">
                <div class="input-group">
                    <input type="text" class="form-control" />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <i class="fas fa-search fa-sm"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div id="sk-search-sections" class="col-md-3">
            <div class="d-flex">
                <a href="#" class="mr-auto">
                    <i class="fas fa-external-link-alt fa-xs"
                       data-fa-transform="flip-h"></i>
                </a>
                <p>Sections:</p>
            </div>
            <div class="sk-hr"></div>
        </div>
        <div id="sk-search-subsections" class="col-md-3">
            <p>Subsections:</p>
            <div class="sk-hr"></div>
        </div>
        <div id="sk-search-items" class="col-md-6">
            <p>Items:</p>
            <div class="sk-hr"></div>
        </div>
    </div>
</div>

<i class="fas fa-sort-alpha-down fa-xs"></i>
<i class="fas fa-sort-alpha-up fa-xs"></i>
<i class="fas fa-sort-amount-down fa-xs"></i>
<i class="fas fa-sort-amount-up fa-xs"></i>
<i class="fas fa-sort-numeric-down fa-xs"></i>
<i class="fas fa-sort-numeric-up fa-xs"></i>
<i class="fas fa-sitemap fa-xs"></i>
<br/>
<i class="fas fa-font fa-xs"></i>
<i class="fas fa-calendar-alt fa-xs"></i>
<i class="fas fa-star-half-alt fa-xs"></i>